.panel.panel-default
	.panel-heading
		h4.name.panel-title
		| System variables

	.panel-body
		form.form-inline(name="userForm" novalidate)

			.form-group
				.input-group(ng-class="validationClass(userForm, 'numberOfHandovers')")
					span.input-group-addon Handovers
					input.form-control(name="numberOfHandovers" type="number" min="0" ng-model="user.numberOfHandovers" ng-change="save(userForm, 'numberOfHandovers')" required)

			.form-group
				.input-group(ng-class="validationClass(userForm, 'numberOfContacts')")
					span.input-group-addon Patient contacts
					input.form-control(name="numberOfContacts" type="number" min="0" ng-model="user.numberOfContacts" ng-change="save(userForm, 'numberOfContacts')" required)

			.form-group
				.input-group(ng-class="validationClass(userForm, 'numberOfSystems')")
					span.input-group-addon Systems updated
					input.form-control(name="numberOfSystems" type="number" min="0" ng-model="user.numberOfSystems" ng-change="save(userForm, 'numberOfSystems')" required)

			.form-group
				.input-group(ng-class="validationClass(userForm, 'touchPoints')")
					span.input-group-addon System touch points
					input.form-control(name="touchPoints" type="number" min="0" ng-model="user.touchPoints" ng-change="save(userForm, 'touchPoints')" required)

			.form-group
				.input-group(ng-class="validationClass(userForm, 'numberOfPeopleInvolved')")
					span.input-group-addon People involved
					input.form-control(name="numberOfPeopleInvolved" type="number" min="0" ng-model="user.numberOfPeopleInvolved" ng-change="save(userForm, 'numberOfPeopleInvolved')" required)