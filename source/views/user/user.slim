.user.container-fluid
    .row
        .col-xs-10.col-xs-offset-1
            h3
                | {{user.name}}

            = partial "user_details"
            = partial "system_variables"
            / = partial "basis_32"

            .panel.panel-default
                .panel-heading
                    h4.name.panel-title
                    | Activity

                .panel-body
                    .btn-group.dropup
                        button.btn.btn-default.dropdown-toggle(type="button")
                            | New Activity
                            span.caret
                        ul.dropdown-menu(role="menu")
                            li: a(href="#" ng-click="createActivity($event, 'basis32')") Basis 32

    alert.messages(ng-show="alerts.length != 0")
        div.fade(ng-repeat="alert in alerts")
            | {{alert.message}}


