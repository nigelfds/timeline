.container-fluid
    .row
        .col-xs-10.col-xs-offset-1
            .list-group
                a.username.list-group-item.list-group-item-info(ng-repeat="user in users | orderBy:'name'" href="#/users/{{user._id.$oid}}")
                    span.badge
                        | UR {{user.urNumber}}
                    h4.list-group-item-heading
                        | {{user.name}}
                    
        .col-xs-10.col-xs-offset-1(ng-repeat-end)
            .panel.panel-default
                .panel-heading
                    h4.name.panel-title
                    | New user
                .panel-body
                    form.newuser.form-inline(name="userForm" novalidate)
                        .form-group
                            .input-group(ng-class="validationClass(userForm, 'userName')")
                                span.input-group-addon Name
                                input.form-control(name="userName" ng-model="userName" required)

                        .form-group
                            .input-group(ng-class="validationClass(userForm, 'urNumber')")
                                span.input-group-addon UR Number
                                input.form-control(name="urNumber" type="number" min="0" ng-model="urNumber" required)

                        .form-group
                            .input-group(ng-class="validationClass(userForm, 'age')")
                                span.input-group-addon Age
                                input.form-control(name="age" type="number" min="0" ng-model="age" required)
                        .form-group
                            select.form-control(ng-model="gender" required)
                                option (value="") Select A Gender
                                option (value="male")Male
                                option (value="female")Female
                        .form-group
                            button.btn.btn-default(ng-click="createUser($event)" ng-disabled="userForm.$invalid") Create User
